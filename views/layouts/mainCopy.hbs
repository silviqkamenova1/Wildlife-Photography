                <li><a href="/art/create">Create Publication</a></li>
                <li><a href="/art/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
                {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
                {{/if}}
            </ul>

        </nav>
        {{{body}}}
        {{#if error}}
            <div class="error-box">
